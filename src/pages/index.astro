<style>
	@import url('https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap');


*{
 margin: 2;
 margin-left: 2px;
 margin-right: 2px;
 padding: 0;
 box-sizing: border-box;
 text-decoration: none;
 list-style: none;
}

body {
    font-family: "Poppins", sans-serif;
}

.header{
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: 85px;
    padding: 5px 10%;
}
.header .logo{
    cursor: pointer;
}
.header .logo img{
    height: 70px;
    width: auto;
    transition: all 0.3s;
}
.header .logo img:hover{
    transform:  scale(1.2);
}
.header .navbar ul li{
    display: inline-block;
    padding: 0 20px ;
}
.header .navbar li:hover{
    transform: scale(1.1);
}
.header .navbar a{
    font-size: 700;
    color:#000000;
    text-decoration: none;
}
.header .navbar li a:hover{
    color: #007706;
}
img{
    max-width: 100%;
}
.imag61{
	margin-left: 55px;
	width: 650px;
	height: 650px;
}
.header-content{
	margin-left: 55px;
	margin-right: 55px;
    display: flex;
    justify-content: space-between;
    align-items: center;
	text-align: justify;
}

.second-container{
	display: flex;
    justify-content: space-between;
    align-items: center;
	text-align: justify;
}
.header-txt2{
	flex-basis: 50%;
    margin-right: 55px;
}

.header-txt{
    flex-basis: 50%;
    margin-right: 25px;
}

span {
    /* color: #188103; */
    /* color: #111419; */
    font-size: 17px;
    font-weight: 600;
    display: block;
    margin-bottom: 25px;
}

.header-txt h1{
    font-size: 70px;
    text-transform: capitalize;
    line-height: 1;
    color: #111419;
    margin-bottom: 35px;
}

.header-txt p {
    font-size: 17px;
    color: #515557;
    margin-bottom: 35px;
}
.button-container {
    text-align: center;
}

.buttons{
    display: flex;
}

.buttons4{
	display: flex;
}

.contact, .btn-get-started, .secondary-btn {
    border: none;
    padding: 15px 30px;
    font-size: 16px;
    border-radius: 50px;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.3s;
}

.btn-get-started{
background-color: #188103;
    color: #fff;
}

.btn-get-started:hover {
    background-color: #188103;
    transform: scale(1.05);
}
.secondary-btn {
    background-color: #ecf0f1;
    color: #7f8c8d;
    margin-right: 10px;
}


.secondary-btn:hover {
    background-color: #bdc3c7;
    transform: scale(1.05);
}
.contact{
background-color: #188103;
    color: #fff;
}

.contact:hover {
    background-color: #188103;
    transform: scale(1.05);
}
.learn-more-btn{
    border-color: #188103;
    padding: 14px 30px;
    font-size: 15px;
    border-radius: 50px;
    cursor: pointer;
    transition: background-color 0.3s, transform 0.3s;
}
.learn-more-btn {
    background-color: #ecf0f1;
    color: #7f8c8d;
    margin-right: 10px;
}

.learn-more-btn:hover {
    background-color: #bdc3c7;
    transform: scale(1.05);
}
.social-media {
    justify-content: space-between;
    display: flex;
    margin-top: 20px;
}

.social-media a {
    display: flex;
    font-size: 16px;
    margin-top: 50px;
    color: #000000;
}

.social-media a img {
    height: 30px;
}

.btn-4{
    font-weight: 700;
    padding: 9px 25px;
    background-color: #007706;
	color:#f8f8f8;
	border-radius: 50px;
    text-transform: capitalize;
    cursor: pointer;
    transition: all 0.3s ease 0s;
}
.header .btn-4:hover{
   transform: scale(1.1); 
}
.header-img{
    flex-basis: 50%;
    text-align: center;
}

.header-img img{
    height: 550px;
}
.products{
padding: 0 0 50px 0;
text-align: center;
}
.h2{
    font-size: 40px;
    color: #111419;
}
.box-container{
 	margin-top: 55px;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 20px;
}

.box{
    padding: 20px;
    border-radius: 5px;
    box-shadow: 0 5px 10px rgba(0, 0, 0, 0.2);
    background-color: #e8ebeb;
    display: none;
	
}
.box:nth-child(1),
.box:nth-child(2),
.box:nth-child(3)
{
    display: inline-block;
}

.box img{
    height: 200px;
}
 .product-txt h3{
    font-size: 20px;
    color: #111419;
    margin-bottom: 10;
 }

 .product-txt p{
    margin-bottom: 25px;
    color: #515557;
 }
@media (max-width:991px){
    .header{
        padding: 50px 0 0 0;
    }
    .header-content{
        padding: 30px;
        flex-direction: column;
        text-align: center;
    }
    .header-txt{
        margin-right: 0;
    }
    .buttons{
        justify-content: center;
    }
    .header-img{
        display: none;
    }
    .products{
        padding: 0 30px 30px 30px;
    }
}
</style>
